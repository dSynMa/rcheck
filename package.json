{
    "name": "rcheck",
    "description": "VSCode extension for the R-CHECK specification language",
    "icon": "icons/icon.png",
    "private": true,
    "author": {
        "name": "The R-CHECK team"
    },
    "bugs": "https://github.com/dSynMa/rcheck/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/dSynMa/rcheck"
    },
    "keywords": [
        "model-checking",
        "multi-agent-systems",
        "reconfiguration",
        "verification"
    ],
    "version": "0.1.0",
    "files": [
        "bin",
        "icons",
        "language-configuration.json",
        "LICENSE",
        "out",
        "src",
        "syntaxes"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc -b tsconfig.src.json && node esbuild.mjs",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.src.json --watch\" \"node esbuild.mjs --watch\"",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "build:web": "npm run build",
        "bundle": "vite build",
        "bundle:serve": "http-server ./dist --port 5175",
        "dev": "vite",
        "dev:debug": "vite --debug --force",
        "serve": "npm run dev",
        "test": "vitest run"
    },
    "dependencies": {
        "@types/ejs": "^3.1.5",
        "@vscode-elements/elements": "^2.3.1",
        "axios": "^1.9.0",
        "chalk": "~5.6.0",
        "commander": "~11.0.0",
        "ejs": "^3.1.10",
        "langium": "~4.2.0",
        "monaco-languageclient": "~9.11.0",
        "typir": "~0.3.2",
        "typir-langium": "~0.3.2",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@codingame/esbuild-import-meta-url-plugin": "~1.0.2",
        "@types/node": "^24.0.0",
        "@types/vscode": "~1.94.0",
        "@vscode/vsce": "^3.4.0",
        "concurrently": "~9.2.0",
        "esbuild": "^0.25.5",
        "http-server": "~14.1.1",
        "langium-cli": "~4.2.0",
        "typescript": "~5.9.2",
        "vite": "^7.0.0",
        "vitest": "^3.2.0"
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "rcheck",
    "engines": {
        "vscode": "^1.94.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "commands": [
            {
                "command": "rcheck.simulate",
                "title": "R-CHECK: Open simulator"
            },
            {
                "command": "rcheck.todot",
                "title": "R-CHECK: Show agents as automata"
            },
            {
                "command": "rcheck.tosmv",
                "title": "R-CHECK: Show SMV translation"
            },
            {
                "command": "rcheck.verify-ic3",
                "title": "R-CHECK: Model-check using IC3"
            },
            {
                "command": "rcheck.verify-bmc",
                "title": "R-CHECK: Model-check using BMC"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "rcheck.simulate",
                    "when": "resourceExtname == .rcp"
                },
                {
                    "command": "rcheck.todot",
                    "when": "resourceExtname == .rcp"
                },
                {
                    "command": "rcheck.tosmv",
                    "when": "resourceExtname == .rcp"
                },
                {
                    "command": "rcheck.verify-ic3",
                    "when": "resourceExtname == .rcp"
                },
                {
                    "command": "rcheck.verify-bmc",
                    "when": "resourceExtname == .rcp"
                }
            ]
        },
        "languages": [
            {
                "id": "r-check",
                "aliases": [
                    "R-CHECK",
                    "r-check"
                ],
                "extensions": [
                    ".rcp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "r-check",
                "scopeName": "source.r-check",
                "path": "syntaxes/r-check.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension/main.cjs",
    "bin": {
        "r-check-cli": "./bin/cli.js"
    }
}
